<UserControl x:Class="CommonControls.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommonControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="PickerImage" Stretch="Uniform" 
               RenderOptions.BitmapScalingMode="HighQuality"
               MouseDown="OnMouseDown" MouseMove="OnMouseMove" MouseUp="OnMouseUp"/>
        <Canvas x:Name="CursorCanvas" IsHitTestVisible="False">
            <Ellipse x:Name="SelectionCursor" Width="14" Height="14" 
                     Stroke="White" StrokeThickness="2" Fill="Transparent">
                <Ellipse.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.8"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>
    </Grid>
</UserControl>
