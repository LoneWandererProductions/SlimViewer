<Window x:Class="SlimViews.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SlimViewer - Help" Height="500" Width="550"
        WindowStartupLocation="CenterOwner" 
        Background="#F5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="SlimViewer Documentation" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White" Padding="15" BorderBrush="LightGray" BorderThickness="1">
            <StackPanel>

                <TextBlock Text="Overview" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#005A9E"/>
                <TextBlock Text="SlimViewer is a fast, lightweight image viewer and editor. Use the top menu or the keyboard shortcuts below to navigate, edit, and manage your images without taking your hands off the keyboard." 
                           TextWrapping="Wrap" Margin="0,0,0,20"/>

                <TextBlock Text="Global Keyboard Shortcuts" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#005A9E"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Left Arrow" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Previous Image"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Right Arrow" FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Next Image"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Delete" FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Delete current image from disk"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="F5" FontWeight="Bold"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="Refresh current image"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Ctrl + O" FontWeight="Bold"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="Open Image"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Ctrl + S" FontWeight="Bold"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="Save current edits"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Ctrl + Z" FontWeight="Bold"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="Undo last edit"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Ctrl + Y" FontWeight="Bold"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" Text="Redo last edit"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Close" Width="100" Height="30" HorizontalAlignment="Right" 
                Margin="0,15,0,0" IsCancel="True" Click="Button_Click" />
    </Grid>
</Window>