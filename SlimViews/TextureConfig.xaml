<!-- ReSharper disable once MemberCanBeInternal -->
<Window x:Class="SlimViews.TextureConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Texture Config" Height="800" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontWeight="Bold" Text="Texture Type" Margin="0,5" />
                <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding TextureOptions}"
                          SelectedItem="{Binding SelectedTexture, UpdateSourceTrigger=PropertyChanged}"
                          ToolTip="Select the pattern algorithm to configure" />

                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" FontWeight="Bold" Text="General Settings" Margin="0,15,0,5" />

                <Label Content="Min Value" Grid.Row="2" Grid.Column="0" />
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding MinValue, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsMinValueActive}" ToolTip="Minimum intensity/noise threshold" />

                <Label Content="Max Value" Grid.Row="3" Grid.Column="0" />
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding MaxValue, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsMaxValueActive}" ToolTip="Maximum intensity/noise threshold" />

                <Label Content="Alpha" Grid.Row="4" Grid.Column="0" />
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Alpha, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsAlphaActive}" ToolTip="Transparency of the generated texture (0-255)" />

                <Label Content="X Period" Grid.Row="5" Grid.Column="0" />
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding XPeriod}" IsEnabled="{Binding IsXPeriodActive}" />

                <Label Content="Y Period" Grid.Row="6" Grid.Column="0" />
                <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding YPeriod}" IsEnabled="{Binding IsYPeriodActive}" />

                <Label Content="Turbulence Power" Grid.Row="7" Grid.Column="0" />
                <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding TurbulencePower}"
                         IsEnabled="{Binding IsTurbulencePowerActive}" />

                <Label Content="Is Monochrome" Grid.Row="10" Grid.Column="0" />
                <CheckBox Grid.Row="10" Grid.Column="1" IsChecked="{Binding IsMonochrome}"
                          IsEnabled="{Binding IsMonochromeActive}" VerticalAlignment="Center" />

                <Label Content="Use Turbulence" Grid.Row="13" Grid.Column="0" />
                <CheckBox Grid.Row="13" Grid.Column="1" IsChecked="{Binding UseTurbulence}"
                          IsEnabled="{Binding IsUseTurbulenceActive}" VerticalAlignment="Center" />

                <TextBlock Grid.Row="15" Grid.ColumnSpan="2" FontWeight="Bold" Text="Crosshatch Settings"
                           Margin="0,15,0,5" />

                <Label Content="Line Spacing" Grid.Row="16" Grid.Column="0" />
                <TextBox Grid.Row="16" Grid.Column="1" Text="{Binding LineSpacing}"
                         IsEnabled="{Binding IsLineSpacingActive}" />

                <Label Content="Line Thickness" Grid.Row="18" Grid.Column="0" />
                <TextBox Grid.Row="18" Grid.Column="1" Text="{Binding LineThickness}"
                         IsEnabled="{Binding IsLineThicknessActive}" />

                <TextBlock Grid.Row="21" Grid.ColumnSpan="2" FontWeight="Bold" Text="Advanced Texture Settings"
                           Margin="0,15,0,5" />

                <Label Content="Wave Frequency" Grid.Row="22" Grid.Column="0" />
                <TextBox Grid.Row="22" Grid.Column="1" Text="{Binding WaveFrequency}"
                         IsEnabled="{Binding IsWaveFrequencyActive}" />

                <Label Content="Randomization" Grid.Row="24" Grid.Column="0" />
                <TextBox Grid.Row="24" Grid.Column="1" Text="{Binding RandomizationFactor}"
                         IsEnabled="{Binding IsRandomizationFactorActive}" />
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="5" Command="{Binding SaveCommand}" />
            <Button Content="Reset" Width="80" Margin="5" Command="{Binding ResetCommand}" />
            <Button Content="Cancel" Width="80" Margin="5"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        </StackPanel>
    </Grid>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SlimViewer;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
</Window>