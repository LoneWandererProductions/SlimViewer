<UserControl x:Class="SlimControls.ToolOptionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SlimControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <local:NotNullToBooleanConverter x:Key="NotNullToBooleanConverter" />
    </UserControl.Resources>

    <StackPanel Margin="10">
        <!-- Shape Selection -->
        <TextBlock Text="Select Shape:" FontWeight="Bold" />
        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
            <RadioButton Content="Rectangle"
                         IsChecked="{Binding SelectedShape, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Rectangle}" />
            <RadioButton Content="Circle"
                         IsChecked="{Binding SelectedShape, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Circle}" />
            <RadioButton Content="Freeform"
                         IsChecked="{Binding SelectedShape, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Freeform}" />
        </StackPanel>

        <!-- Area Operations -->
        <TextBlock Text="Operations:" FontWeight="Bold" />
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0"
                    IsEnabled="{Binding SelectedShape, Converter={StaticResource NotNullToBooleanConverter}}">
            <Button Content="Fill" Command="{Binding FillCommand}" />
            <Button Content="Texture" Command="{Binding TextureCommand}" />
            <Button Content="Filter" Command="{Binding FilterCommand}" />
        </StackPanel>

        <!-- AreaControl can be injected here -->
        <local:AreaControl Margin="0,10,0,0"
                           ToolChangedRouted="AreaControl_ToolChangedRouted"
                           FillTypeChangedRouted="AreaControl_FillTypeChangedRouted"
                           FilterConfigExecuted="AreaControl_FilterConfigExecuted"
                           TextureConfigExecuted="AreaControl_TextureConfigExecuted" />
    </StackPanel>
</UserControl>